{% extends 'game.html.twig' %}

{% block title %}Ultimate Warfare - Market{% endblock title %}

{% block content %}
    <p class="text-center">
        <a class="B" href="{{ path('Game/Market') }}">Buy</a> -
        <a class="B" href="{{ path('Game/Market/Sell') }}">Sell</a> -
        <a class="B" href="{{ path('Game/Market/CreateOrder') }}">New order</a> -
        <a class="B" href="{{ path('Game/Market/ListOrders') }}">Your orders</a>
    </p>

    <table class="table text-center">
        <tr class="tabletop">
            <td colspan="5"><b>Sell</b></td>
        </tr>
        <tr>
            <td><b>Resource</b></td>
            <td><b>Amount</b></td>
            <td><b>Price</b></td>
            <td><b>Player</b></td>
            <td><b>Sell</b></td>
        </tr>
        {% for item in marketItems %}
            <tr>
                <td>{{ item.gameResource }}</td>
                <td>{{ item.amount }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.player.name }}</td>
                <td><a class="B" href="{{ path('Game/Market/Sell/Order', {'marketItemId': item.id}) }}"><b>Sell</b></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No buy orders....</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
